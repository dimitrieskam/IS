@{
}
@model Domain.DTO.AddStudentOnCourseDTO

<div class="row">
    <div class="col-4">
        <form asp-action="AddStudentOnCourse">
            <input type="hidden" asp-for="CourseId" />

            <div class="form-group">
                <label asp-for="StudentId"></label>
                @Html.DropDownListFor(m=>Model.StudentId, new SelectList(Model.Students, "Id", "FirstName"), new {@class="form-control"})
            </div>
            <div class="form-group">
                <label asp-for="SemesterId"></label>
                @Html.DropDownListFor(m => Model.SemesterId, new SelectList(Model.Semesters, "Id", "SemesterCode"), new {@class="form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Add Student On Course" class="btn-info" />
            </div>
        </form>
    </div>
</div>