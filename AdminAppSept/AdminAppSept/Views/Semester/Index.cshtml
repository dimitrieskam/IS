@{
}

@model List<AdminAppSept.Models.Semester>

    <div class="container">
        <div class="row m-4">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Semester Code</th>
                        <th>Semester Name</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active semesters</td>
                    </tr>
                }
                else
                {
                    @for(int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>
                                @(i+1)
                            </td>
                            <td>
                                @item.SemesterCode
                            </td>
                            <td>
                                @item.SemesterName
                            </td>
                        </tr>
                    }
                }
            </tbody>
            </table>
        </div>
    </div>