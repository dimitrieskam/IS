@{
}

@model List<AdminAppSept.Models.StudentOnCourse>

    <div class="container">
        <div class="row m-4">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Student Index</th>
                        <th>Student Name</th>
                        <th>Semester Code</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5">No active students on this course</td>
                    </tr>
                }
                else
                {
                    @for(int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>
                                @(i+1)
                            </td>
                            <td>
                                @item.Course.CourseCode
                            </td>
                            <td>
                                @item.Course.CourseName
                            </td>
                            <td>
                                @item.Student.StudentIndex
                            </td>
                            <td>
                                @item.Student.FirstName
                            </td>
                            <td>
                                @item.Semester.SemesterCode
                            </td>
                            <td><a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-danger">Create Invoice</a></td>

                        </tr>
                    }
                }
            </tbody>
            </table>
        </div>
    </div>