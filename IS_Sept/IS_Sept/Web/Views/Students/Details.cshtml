@model Domain.Domain_Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentIndex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentIndex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Embg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Embg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Semester Code</th>
                <th>Semester Name</th>
            </tr>
        </thead>
        <tbody>
            @for(int i = 0; i < Model.AllCourses.Count(); i++)
            {
                var item = Model.AllCourses.ElementAt(i);
                <tr>
                    <td>
                        @(i+1)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Course.CourseCode)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Course.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Semester.SemesterCode)
                    </td>
                    <td>
                        @Html.DisplayFor(m=>item.Semester.SemesterName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
